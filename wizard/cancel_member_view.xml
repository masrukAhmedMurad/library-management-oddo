<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="member_cancel_view_form" model="ir.ui.view">
        <field name="name">cancel.member.form</field>
        <field name="model">library.member.cancel</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>

                        <field name="tags"/>
                        <field name="reason"/>

                    </group>

                      <footer>
                        <button string="Cancel Membership" type="object" name="cancel_action" class="btn btn-primary" data-hotkey="q"/>
                        <button string="Discard" special="cancel" data-hotkey="z"/>
                    </footer>
                </sheet>

            </form>
        </field>
    </record>







    <record id="action_cancel_member" model="ir.actions.act_window">
        <field name="name">Library cancel member</field>
        <field name="res_model">library.member.cancel</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">

                Click to add a new library book.

            </p>
        </field>
    </record>



    <menuitem id="cancel_member_details"
              name="cancel member"
              parent="member_child"
              action="action_cancel_member"
              sequence="2"/>


</odoo>