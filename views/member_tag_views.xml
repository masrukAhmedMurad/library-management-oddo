<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="member_tag_view_form" model="ir.ui.view">
        <field name="name">member_tag.form</field>
        <field name="model">member.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>

                        <field name="active" widget="boolean_toggle"/>
                        <field name="color" widget="color_picker"/>
                        <field name="color2" widget="color"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="library_member_search_view" model="ir.ui.view">
        <field name="name">member_tag.search</field>
        <field name="model">member.tag</field>
        <field name="arch" type="xml">

            <search>

                <field name="name"
                       filter_domain="[('name','ilike',self)]"/>


            </search>


        </field>


    </record>


    <record id="library_tag_view_tree" model="ir.ui.view">

        <field name="name">member_tag.view.tree</field>
        <field name="model">member.tag</field>
        <field name="arch" type="xml">

            <tree>
                <field name="name" string="Member Name"/>

                <field name="active" widget="boolean_toggle"/>
                <field name="color" widget="color_picker"/>
                <field name="color2" widget="color"/>

            </tree>


        </field>


    </record>


    <record id="action_library_member_tag" model="ir.actions.act_window">
        <field name="name">Library Member Tag</field>
        <field name="res_model">member.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">

                Click to add a new library book.

            </p>
        </field>
    </record>



    <menuitem id="member_tag_details"
              name="member details"
              parent="member_child"
              action="action_library_member_tag"
              sequence="2"/>


</odoo>